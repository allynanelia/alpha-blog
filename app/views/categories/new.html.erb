<h1 align="center">Create new category</h1>

<% if @category.errors.any? %>
<h2>The following errors prevented the category from getting created </h2>
<div><ul>
  <% @category.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul></div>
<% end %>

<%= form_for @category do |u| %>
  <p>
    <%= u.label :name %> <br />
    <%= u.text_field :name %>
  </p>
  <p>
    <%= u.submit %>
  </p>

<% end %>

<%= link_to "Back to articles listing", articles_path %>
