<h1>User Signup </h1>

<% if @user.errors.any? %>
<h2>The following errors prevented the article from getting created </h2>
<ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @user do |u| %>
  <p>
    <%= u.label :username %> <br />
    <%= u.text_field :username %>
  </p>
  <p>
    <%= u.label :password %> <br />
    <%= u.password_field :password %>
  </p>
  <p>
    <%= u.label :email %> <br />
    <%= u.email_field :email %>
  </p>
  <p>
    <%= u.submit %>
  </p>

<% end %>

<%= link_to "Back to articles listing", articles_path %>
